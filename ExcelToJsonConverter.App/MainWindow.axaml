<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="700"
		x:Class="ExcelToJsonConverter.App.MainWindow"
        Title="ExcelToJsonConverter.App"
		Background="{StaticResource DeicoLightBlue}">
	<Window.Styles>

		<Style Selector="TextBox.jsonPreview /template/ Border#PART_BorderElement">
			<Setter Property="Background" Value="#1E1E1E"/>
			<Setter Property="BorderBrush" Value="#3e3e42"/>
			<Setter Property="BorderThickness" Value="0"/>
		</Style>

		<Style Selector="TextBox.jsonPreview:pointerover /template/ Border#PART_BorderElement">
			<Setter Property="Background" Value="#1E1E1E"/>
			<Setter Property="BorderBrush" Value="#3e3e42"/>
		</Style>

		<Style Selector="TextBox.jsonPreview:focus /template/ Border#PART_BorderElement">
			<Setter Property="Background" Value="#1E1E1E"/>
			<Setter Property="BorderBrush" Value="#2F6FED"/>
			<Setter Property="BorderThickness" Value="1"/>
		</Style>

	</Window.Styles>

	<Grid Margin="18"
		  RowDefinitions="Auto,Auto,*"
		  RowSpacing="12">

		<!-- Header -->
		<StackPanel Grid.Row="0"
					Orientation="Horizontal"
					Spacing="14"
					VerticalAlignment="Center">

			<!-- Logo -->
			<Border Width="60"
					Height="60"
					CornerRadius="6"
					Background="White"
					Padding="4">
				<Image Source="avares://ExcelToJsonConverter.App/Assets/deico.png"
					   Width="40"
					   Height="40"
					   Stretch="Uniform"/>
			</Border>

			<!-- Title -->
			<StackPanel VerticalAlignment="Center">
				<TextBlock Text="Excel → JSON Converter"
						   FontSize="22"
						   FontWeight="Bold"
						   Foreground="{StaticResource DeicoBlueBrush}"/>

				<TextBlock Text="Internal Tool - DEICO"
						   FontSize="12"
						   Foreground="#6b7280"/>
			</StackPanel>

		</StackPanel>


		<!-- Content: 2 columns -->
		<Grid Grid.Row="2"
			  ColumnDefinitions="420,*"
			  ColumnSpacing="20">

			<!-- LEFT CARD -->
			<Border Grid.Column="0"
					Padding="12"
					CornerRadius="12"
					BorderThickness="2"
					BorderBrush="{StaticResource DeicoBlueBrush}"
					Background="{StaticResource Light}">
				<Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">

					<!-- Card header -->
					<TextBlock Text="Input" FontWeight="Bold" Foreground="#0066b3" />

					<!-- “Toolbar row” like the mock -->
					<Grid Grid.Row="1"
						  ColumnDefinitions="Auto,*"
						  ColumnSpacing="10"
						  RowDefinitions="Auto,Auto"
						  RowSpacing="8">

						<!-- Excel picker row -->
						<Button Grid.Row="0" Grid.Column="0"
								Name="BtnPickExcel"
								Content="Excel Seç"
								BorderThickness="1"
								BorderBrush="{StaticResource Light}"
								Foreground="#FFFFFF"
								Background="{StaticResource DeicoBlue}"
								Width="100"/>

						<Border Grid.Row="0" Grid.Column="1"
								CornerRadius="3"
								BorderThickness="1.5"
								BorderBrush="#0066b3"
								Background="#FFFFFF"
								Padding="8">
							<TextBox Name="TxtExcelPath"
									 Text="(Excel Seçilmedi)"
									 IsReadOnly="True"
									 BorderThickness="0"
									 Background="#FFFFFF"
									 TextWrapping="Wrap"/>
						</Border>

						<!-- Type row -->
						<TextBlock Grid.Row="1" Grid.Column="0"
								   Text="Tür"
								   Foreground="#191919"
								   FontWeight="Bold"
								   VerticalAlignment="Center"
								   Opacity="0.75"/>

						<ComboBox Grid.Row="1" Grid.Column="1" 	CornerRadius="3" BorderThickness="1.5" Width="285"
								BorderBrush="#0066b3"
								Background="#FFFFFF"
								Padding="8"
								  Name="CmbType"
								  SelectedIndex="0">
							<ComboBoxItem Content="channel_configure"/>
							<ComboBoxItem Content="channel_transfer"/>
							<ComboBoxItem Content="test_add_directives"/>
							<ComboBoxItem Content="test_prepare"/>
						</ComboBox>
					</Grid>

					<!-- Expected format box + bottom row -->
					<Grid Grid.Row="2" RowDefinitions="Auto,*,Auto" RowSpacing="10">

						<!-- Expected format -->
						<Border Grid.Row="0"
								Padding="10"
								CornerRadius="10"
								BorderBrush="#E2E2E2"
								Background="#FFFFFF">
							<Grid RowDefinitions="Auto,*" RowSpacing="6">
								<TextBlock Text="Beklenen Excel Format" FontWeight="Bold" Foreground="{StaticResource DeicoBlue}"/>
								<ScrollViewer Grid.Row="1"
											  VerticalScrollBarVisibility="Auto"
											  HorizontalScrollBarVisibility="Disabled"
											  MaxHeight="320">
									<TextBlock Name="TxtExpectedFormat"
											   TextWrapping="Wrap"
											   Text="(Tür seçince burada beklenen sheet ve kolonlar görünecek)"/>
								</ScrollViewer>
							</Grid>
						</Border>

						<!-- Bottom row: json + convert button -->
						<StackPanel Grid.Row="2" Spacing="10">

							<Button Name="BtnConvert"
									Background="{StaticResource DeicoBlueBrush}"
									Foreground="White"
									CornerRadius="6"
									Padding="12"
									FontWeight="Bold"
									HorizontalAlignment="Stretch"
									HorizontalContentAlignment="Center"
									VerticalContentAlignment="Center"
									Content="Convert"/>

							<Border Name="SuccessPanel"
									IsVisible="False"
									Background="#e6f4ea"
									BorderBrush="#34a853"
									BorderThickness="1.5"
									CornerRadius="10"
									Padding="12,10">

								<Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
									<PathIcon Grid.RowSpan="2" Grid.Column="0"
											  Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M10,17L5,12L6.41,10.59L10,14.17L17.59,6.58L19,8L10,17Z"
											  Foreground="#34a853"
											  Width="16" Height="16"
											  Margin="0,0,10,0"
											  VerticalAlignment="Top"/>

									<TextBlock Grid.Row="0" Grid.Column="1"
											   Text="JSON başarıyla oluşturuldu:"
											   Foreground="#137333"
											   FontWeight="Bold"
											   FontSize="13"/>

									<TextBlock Grid.Row="1" Grid.Column="1"
											   Name="TxtResultPath"
											   Text=""
											   Foreground="#137333"
											   FontSize="11"
											   TextWrapping="Wrap"
											   Margin="0,4,0,0"
											   Opacity="0.8"/>
								</Grid>
							</Border>
							<Border Name="ErrorPanel"
									IsVisible="False"
									Background="#FDE8E8"
									BorderBrush="#DC2626"
									BorderThickness="1.5"
									CornerRadius="10"
									Padding="12,10">

								<Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
									<PathIcon Grid.RowSpan="2" Grid.Column="0"
											  Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M13,17H11V15H13V17M13,13H11V7H13V13Z"
											  Foreground="#DC2626"
											  Width="16" Height="16"
											  Margin="0,0,10,0"
											  VerticalAlignment="Top"/>

									<TextBlock Grid.Row="0" Grid.Column="1"
											   Text="Hata oluştu:"
											   Foreground="#991B1B"
											   FontWeight="Bold"
											   FontSize="13"/>

									<TextBlock Grid.Row="1" Grid.Column="1"
											   Name="TxtError"
											   Text=""
											   Foreground="#991B1B"
											   FontSize="11"
											   TextWrapping="Wrap"
											   Margin="0,4,0,0"
											   Opacity="0.9"/>
								</Grid>
							</Border>
						</StackPanel>
					</Grid>
				</Grid>
			</Border>

			<!-- RIGHT CARD -->
			<Border Grid.Column="1"
					Padding="20"
					CornerRadius="15"
					BorderThickness="1.5"
					BorderBrush="{StaticResource DeicoBlueBrush}"
					Background="{StaticResource DeicoLightBlue}">

				<Grid RowDefinitions="Auto, *, Auto" RowSpacing="15">

					<Grid Grid.Row="0" ColumnDefinitions="*, Auto" VerticalAlignment="Center">
						<TextBlock Text="JSON Preview"
								   Foreground="{StaticResource DeicoBlueBrush}"
								   FontSize="18"
								   FontWeight="Bold"/>
						<TextBlock Grid.Column="1"
								   Text="⋯"
								   Foreground="#808080"
								   FontSize="24"
								   VerticalAlignment="Center"
								   Cursor="Hand"/>
					</Grid>
					<Border Grid.Row="1"
							Background="#1E1E1E"
							BorderBrush="#3e3e42"
							BorderThickness="1"
							CornerRadius="10"
							Padding="5">
						<TextBox Name="TxtPreview"
								 Classes="jsonPreview"
								 Background="#1E1E1E"
								 Foreground="#D4D4D4"
								 BorderThickness="0"
								 FontFamily="Consolas, Monospace"
								 FontSize="14"
								 AcceptsReturn="True"
								 IsReadOnly="True"
								 ScrollViewer.VerticalScrollBarVisibility="Auto"
								 ScrollViewer.HorizontalScrollBarVisibility="Auto"
								 Watermark="JSON önizleme burada görünecek..."/>
					</Border>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</Window>